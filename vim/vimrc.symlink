" nnoremap <F2> :call CycleLang()<CR>
fun! CycleLang()
    let langs = ['', 'en_au', 'fr']

    let i = index(langs, &spl)
    let j = (i+1)%len(langs)
    let &l:spl = langs[j] " letlocal

    if empty(&spl)
        echo "nospell"
        setlocal nospell
    else
        echo "spelling: ".&spl
        setlocal spell
    endif
endfun

